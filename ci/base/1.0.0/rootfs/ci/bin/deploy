#!/usr/bin/env bash

# Deploy to kubernetes using helm

set -o errexit    # always exit on error
set -o pipefail   # do not ignore exit codes when piping output

BUILD_DIR=${1:-"."}

# Load dependencies
source /ci/lib/stdlib.sh
source /ci/lib/env.sh
source /ci/lib/helm.sh
source /ci/lib/slack.sh

validate_aws_env

echo "Deploying to ${ENVIRONMENT}"

kubectl_auth() {
  kops export \
    --name "${CLUSTER_NAME}" \
    --state "${KOPS_STATE_STORE}" \
    kubecfg
}

kubectl_auth

kubectl_context() {
	kubectl config use-context "${CLUSTER_NAME}"
}

kubectl_context

prepare_helm_release() {
  helm init
  helm dependency update "${DEPLOY_PATH}"
}

prepare_helm_release

helm_set_arguments() {
  envvars_path="./envvars"
  [[ ! -f "${envvars_path}" ]] && return
  helmset $(cat "${envvars_path}")
}

helm_upgrade() {
  helm upgrade -i \
    -f "${DEPLOY_PATH}/${ENVIRONMENT}.yaml" \
    --set "image=${IMAGE}" \
    $(helm_set_arguments) \
    "${SHORT_NAME}" \
    "${DEPLOY_PATH}"
}

helm_upgrade

if [ "$SLACK_DEV_WEBHOOK_URL" ]; then
  slack_notification "${IMAGE}" "${ENVIRONMENT}"
else
  warn "SLACK_DEV_WEBHOOK_URL is not set"
fi

